{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "@vercel/node"]
  },
  "include": ["api/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
